<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreiplatzApp.Views.ContentViews.CustomEntry"
             x:Name="this">
  <ContentView.Content>
        <Grid>
            <!-- Kinda stolen from: https://dev.to/jefrypozo/creating-an-outlined-entry-in-xamarin-forms-48af -->
            <Frame HasShadow="False" CornerRadius="3" BorderColor="{StaticResource Outline}" BackgroundColor="Transparent" />
            <Entry PlaceholderColor="Gray" Placeholder="{Binding Placeholder}" Margin="5,0" BackgroundColor="Transparent" Text="{Binding Text, Mode=TwoWay}"></Entry>
        </Grid>
    </ContentView.Content>
</ContentView>