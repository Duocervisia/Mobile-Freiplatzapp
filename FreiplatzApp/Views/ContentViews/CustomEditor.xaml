<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreiplatzApp.Views.ContentViews.CustomEditor">
  <ContentView.Content>
        <Grid>
            <Frame HasShadow="False" CornerRadius="3" BorderColor="{StaticResource Outline}" BackgroundColor="Transparent" />
            <Editor PlaceholderColor="Gray" Placeholder="{Binding Placeholder}" Margin="5,0" BackgroundColor="Transparent" Text="{Binding Text, Mode=TwoWay}"></Editor>
        </Grid>
    </ContentView.Content>
</ContentView>