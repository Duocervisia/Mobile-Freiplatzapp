<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreiplatzApp.Views.ContentViews.CustomSearchBar">
  <ContentView.Content>
        <Grid>
            <!-- Kinda stolen from: https://dev.to/jefrypozo/creating-an-outlined-entry-in-xamarin-forms-48af -->
            <Frame HasShadow="False" CornerRadius="3" BorderColor="{StaticResource Outline}" BackgroundColor="Transparent" Margin="5"  />
            <!--TextChanged="SearchBar_TextChanged"-->
            <SearchBar PlaceholderColor="white" Placeholder="{Binding Placeholder}" BackgroundColor="Transparent" Margin="10,0" Text="{Binding Text, Mode=TwoWay}">
            </SearchBar>
            <ListView x:Name="listView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Code}" Detail="{Binding District}">
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentView.Content>
</ContentView>